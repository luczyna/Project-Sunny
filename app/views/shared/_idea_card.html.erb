<div class="idea card">
  <div class="card-body">
    <h3 class="card-title">
      <%= link_to idea.name, idea %>
      <% if !belongs_to_logged_in_user %><small class="text-muted">by <em><%= idea.user.username %></em></small><% end %>
    </h3>
    <p class="card-text"><%= idea.versions.last.goal %> (<em>version #<%= idea.versions.count %></em>)</p>
  </div>
</div>
