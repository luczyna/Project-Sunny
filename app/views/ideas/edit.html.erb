<% if @warning %>
  <%= render 'cant_find_warning' %>
<% else %>
  <h2 class="mb-3"><%= @idea.name %></h2>

  <%= form_tag idea_path, method: 'patch', id: @idea.id,  class: 'edit-idea-form' do %>

    <div class="form-group">
      <%= label_tag :goal, nil, class: 'form-control-label' %>
      <%= text_field_tag :goal, @version_content.goal, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :content, nil, class: 'form-control-label' %>
      <%= text_area_tag :content, @version_content.content, class: 'form-control', rows: 5 %>
    </div>

    <div class="form-group">
      <%= submit_tag 'Update Idea', disabled: true, data: { disabled_with: 'Updating...' }, class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
